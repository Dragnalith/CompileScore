<UserControl x:Class="CompileScore.Timeline.TimelineNodeTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompileScore.Timeline"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="headerText"  FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <TextBlock x:Name="descriptionText"/>
            <TextBlock x:Name="durationText" />
            <Border BorderBrush="Silver" BorderThickness="0,1,0,0" Margin="0,8" />
            <WrapPanel>
                <TextBlock FontStyle="Italic">Placedholder node data here with all the stats</TextBlock>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
